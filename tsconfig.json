{
  "compilerOptions": {
    "outDir": "./dist",
    "allowJs": false,
    "strict": true,
    "module": "CommonJS",
    "esModuleInterop": true,
    "types": ["node"],
    "rootDir": ".",
    "paths": {
      "@/*": ["./src/*"]
    },
    "lib": ["esnext", "es2015"],
    "moduleResolution": "node"
  },
  "include": ["./src/**/*"]
}